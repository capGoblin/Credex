{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "module": "node16",
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16"
  },
  "include": ["*.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": false,
    "transpileOnly": true
  }
}
